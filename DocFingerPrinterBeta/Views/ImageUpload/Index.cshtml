
@{
    ViewBag.Title = "FileUpload";
}

<h2>File Upload</h2>

<div>
    @using (Html.BeginForm("FileUpload", "ImageUpload", FormMethod.Post,
                                         new { enctype = "multipart/form-data" }))
    {
        <label for="file">Upload Image:</label>
        <input type="file" name="file" id="file" style="width: 100%;"/>
        <input type="radio" name="position1" value="0" />
        <label for="position1">Top Left</label><br/>
        <input type="radio" name="position2" value="0" />
        <label for="position2">Top Right</label><br />
        <input type="radio" name="position3" value="0" />
        <label for="position3">Bottom Left</label><br />
        <input type="radio" name="position4" value="0" />
        <label for="position4">Bottom Right Left</label><br />
        <button type = "submit" class="submit">Upload</button>
    }
</div>
<div>
    <a href="@ViewBag.Link" style="@ViewBag.Hidden">Download Encoded Image</a>
</div>