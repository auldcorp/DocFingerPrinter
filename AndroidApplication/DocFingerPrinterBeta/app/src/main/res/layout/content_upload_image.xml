<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_upload_image"
    tools:context=".UploadImage"
    android:weightSum="1">

    <EditText
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="@string/location_upload"
        android:id="@+id/location_upload"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.83"
        android:layout_toLeftOf="@+id/browse_upload"
        android:layout_toStartOf="@+id/browse_upload"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/browse_upload"
        android:id="@+id/browse_upload"
        android:layout_weight="0.17"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:id="@+id/upload"
        android:layout_weight="0.83"
        android:layout_below="@+id/browse_upload"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/browse_upload"
        android:layout_alignEnd="@+id/browse_upload"/>
</RelativeLayout>